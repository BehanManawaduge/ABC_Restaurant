<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController"
      alignment="CENTER"
      spacing="15"
      prefWidth="300"
      prefHeight="200"
      styleClass="root">

    <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="text-field" />
    <Button fx:id="loginButton" text="Login" onAction="#login" styleClass="button" />
</VBox>
