<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ViewReportsController"
      alignment="CENTER"
      spacing="15"
      prefWidth="600"
      prefHeight="400">

    <Label text="View Reports"/>
    <TableView fx:id="reportsTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="reportIdColumn" text="Report ID"/>
            <TableColumn fx:id="reportTypeColumn" text="Report Type"/>
            <TableColumn fx:id="reportContentColumn" text="Content"/>
        </columns>
    </TableView>
    <Button text="Refresh" onAction="#handleRefresh"/>

</VBox>
