<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StaffController" spacing="10" alignment="CENTER">
    <TableView fx:id="reservationTable">
        <columns>
            <TableColumn text="Reservation ID"/>
            <TableColumn text="User ID"/>
            <TableColumn text="Service Type"/>
            <TableColumn text="Reservation Date"/>
            <TableColumn text="Status"/>
        </columns>
    </TableView>
    <Button text="Update Reservation" onAction="#updateReservationStatus"/>
</VBox>
