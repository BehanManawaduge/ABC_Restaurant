<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PaymentController" spacing="10" alignment="CENTER">
    <TextField fx:id="userIdField" promptText="User ID"/>
    <TextField fx:id="reservationIdField" promptText="Reservation ID"/>
    <TextField fx:id="amountField" promptText="Amount"/>
    <TextField fx:id="paymentMethodField" promptText="Payment Method"/>
    <Button text="Process Payment" onAction="#processPayment"/>
</VBox>
